        public List<ProvinceOrState> GetByCode(String code)
        {
            var result = from c in Context.ProvinceOrStates
                         where c.Code == code
                         select c;
            if (result != null)
            {
                return result.ToList();
            }
            else
            {
                return null;
            }
        }
    }
}
